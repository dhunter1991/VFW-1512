var mainWindow = Titanium.UI.createWindow({
	backgroundColor: "#000"
});

var navWindow = Ti.UI.iOS.createNavigationWindow({
	window: mainWindow
});

var titleLabel = Ti.UI.createLabel({
	text: "New Movie details",
	textAllign: "center",
	color: "#fff",
	font: {fontSize: 20, fontFamily: "Cochin", fontWeight: "regular", fontStyle: "bold", },
	
});

var imageView = Ti.UI.createView({
	top: navWindow.height,
	height: 100,
	backgroundColor: "red",
});

var imageText = Ti.UI.createLabel({
	text: "Gallery",
	left: 20,
	color: "#fff",
	font: {fontSize: 40, fontFamily: "Cochin", fontWeight: "regular", fontStyle: "bold", }
});

var dataView = Ti.UI.createView({
	top: imageView.top+ imageView.height,
	height: 100,
	backgrounfColor: "blue"
});

var dataText = Ti.UI.createLabel({
	text: "Details",
	left: 20,
	color: "#fff",
	font: {fontSize: 40, fontFamily: "Cochin", fontWeight: "regular", fontStyle: "bold", }
});

var customView = Ti.UI.createView({
	top: dataView.top+dataView.height,
	height: 100,
	backgroundColor: "yellow"
});

imageView.add(imageText);
dataView.add(dataText);
mainWindow.add(imageView, dataView, customView);
navWindow.add(titleLabel);
navWindow.open();

