var win = Ti.UI.createWindow({
  backgroundColor: "white"
});
var textField = Ti.UI.createTextField({
  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
  color: '#336699',
  top: 20, left: 10,
  width: 250, height: 60
});
var picker = Ti.UI.createPicker({
  top:80,
  useSpinner: true
});

var data = ['Actors', 'Release date', 'director'];
//data[0]=Ti.UI.createPickerRow({title:'Actors'});
//data[1]=Ti.UI.createPickerRow({title:'Release date'});
//data[2]=Ti.UI.createPickerRow({title:'director'});
picker.selectionIndicator = true;

var button = Ti.UI.createView({
	backgroundColor: "#000",
	bottom: 0,
	height: 50
});
var text = Ti.UI.createLabel({
	text: "Submit",
	color: "#fff"
});
//picker.setSelectedRow(0, 1, false);
picker.addEventListener("change", function(e){
		Ti.API.info (">>>>" + e.value);
		data[e.value];
});
var run = function(){
	console.log(picker.SetSelectedRow(0,2,false));
};
button.addEventListener("click", run);


picker.add(data);
button.add(text);
win.add(textField, button, picker);
win.open();

