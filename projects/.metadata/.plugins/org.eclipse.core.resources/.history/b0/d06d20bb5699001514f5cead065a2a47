Titanium.UI.setBackgroundColor("#000");

var comedies = [{title: "Zoolander 2"}, {title: "Central Intelligence"}, {title: "The Boss"}, {title: "The Night Before"}];

var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#f5f5f5"
});

var titleView = Ti.UI.createView({
	height:65,
	backgroundColor: "#fff",
	top: 0
});

var border = Ti.UI.createView({
	backgroundColor: "dbdbdb",
	height: 1,
	top: titleView.height + titleView.top
});

var titleLabel = Ti.UI.createLabel({
	text: "2015 & 2016 new Movies",
	font: {fontSize: 20, fontFamily: "cochin", fontWeight: "bold"},
	top: 30,
	width: "100%",
	textAlign: "center"
});

titleVeiw.add(titleLabel);
mainWindow.add(titleView, border);
mainWindow.open();



 


