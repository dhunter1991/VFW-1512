var newMovies = [ "Zoolander 2", "Criminal Activities", "The Force Awakens", "Allegiant", "Alice Throught The Looking Glass", "Concussion", "Top Gun 2"];

var displayMovies = function(movies){
	for (var i = 0, j = newMovies ; i<6; i++);
	textLabel.text = newMovies[j];
	textLabel.hide;
	
	
	var movieLabel = Titanium.UI.createLabel({
		text: newMovies[j],
		color: "#fff",
		font: {fontSize: 16, fontFamily: "Cochin", fontWeight: "regular", fontStyle: "italic", },
	});

	
		view.add(movieLabel);
	
};

var displayPreviousMovie = function(){
	textLabel.text = newMovies [0];
	textLabel.hide;
	
	
	var previousMovieLabel = Titanium.UI.createLabel({
		text:newMovies[0],
		color: "#fff",
		font:{fontSize: 16, fontFamily: "Cochin", fontWeight: "regular", fontStyle: "italic", }, 
	});
	
	view.add(previousMovieLabel);
};


nextButton.addEventListener( "click", displayMovies);

previousButton.addEventListener("click", displayPreviousMovie);

